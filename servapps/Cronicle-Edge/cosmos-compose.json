{
    "cosmos-installer": {
        "form": [
            {
                "name": "cronDataPath",
                "label": "What is the path to your cron files?",
                "initialValue": "{DefaultDataPath}/cron",
                "type": "text"
            },
            {
                "name": "adminOnly",
                "label": "Do you want to make this service admin only?",
                "initialValue": true,
                "type": "checkbox"
            }
        ]
    },
    "minVersion": "0.9.0",
    "services": {
        "{ServiceName}": {
            "image": "ghcr.io/cronicle-edge/cronicle-edge:main",
            "container_name": "{ServiceName}",
            "restart": "unless-stopped",
            "environment": [
                "CRONICLE_base_path=/opt/cronicle/data",
                "CRONICLE_storage_config=/config/config.json",
                "CRONICLE_sqlite=/data/cronicle.db",
                "CRONICLE_secret_key={Passwords.0}"
            ],
            "command": "manager --sqlite /data/cronicle.db",
            "labels": {
                "cosmos-force-network-secured": "true",
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/Cronicle-Edge/icon.png"
            },
            "volumes": [
                {
                    "source": "{ServiceName}-config",
                    "target": "/config",
                    "type": "volume"
                },
                {
                    "source": "{ServiceName}-data",
                    "target": "/data",
                    "type": "volume"
                },
                {
                    "source": "{Context.cronDataPath}",
                    "target": "/opt/cronicle/data",
                    "type": "bind"
                }
            ],
            "ports": [
                "3012:3012"
            ],
            "routes": [
                    {
                    "name": "{ServiceName}",
                    "description": "Expose {ServiceName} to the web",
                    "useHost": true,
                    "target": "http://{ServiceName}:3012",
                    "mode": "SERVAPP",
                    "Timeout": 14400000,
                    "ThrottlePerMinute": 12000,
                    "BlockCommonBots": true,
                    "SmartShield": {
                        "Enabled": true
                    },
                    "AuthEnabled": true
                    {if Context.adminOnly}
                    , "AuthAdmin": true
                    {/if}
                }
            ]
        }
    }
}