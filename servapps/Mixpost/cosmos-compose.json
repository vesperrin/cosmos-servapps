{
  "cosmos-installer": {
    "form": [
      {
        "name": "appKey",
        "label": "What is you App Key? (Get it from https://mixpost.app/tools/encryption-key-generator)",
        "initialValue": "",
        "type": "text"
      },
      {
        "name": "adminOnly",
        "label": "Do you want to make this service admin only?",
        "initialValue": true,
        "type": "checkbox"
      }
    ]
  },
  "minVersion": "0.7.6",
  "services": {
    "{ServiceName}": {
      "image": "inovector/mixpost:latest",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "depends_on": [
        "{ServiceName}-mysql",
        "{ServiceName}-redis"
      ],
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto",
        "APP_NAME={ServiceName}",
        "APP_KEY={Context.appKey}",
        "APP_DEBUG=false",
        "APP_DOMAIN={Hostnames.{StaticServiceName}.{StaticServiceName}.host}",
        "APP_URL=https://{Hostnames.{StaticServiceName}.{StaticServiceName}.host}",
        "DB_HOST={ServiceName}-mysql",
        "DB_PORT=3306",
        "DB_DATABASE={ServiceName}",
        "DB_USERNAME={ServiceName}",
        "DB_PASSWORD={Passwords.0}",
        "REDIS_PORT=6379"

      ],
      "labels": {
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}",
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://eralumin.github.io/cosmos-servapps/servapps/Mixpost/icon.png"
      },
      "ports": [
        "9000:9000"
      ],
      "volumes": [
        {
          "type": "volume",
          "source": "{ServiceName}",
          "target": "/var/www/html/storage/app"
        },
        {
          "type": "volume",
          "source": "{ServiceName}-logs",
          "target": "/var/www/html/storage/logs"
        }
      ],
      "networks": {
        "{ServiceName}-mysql": {},
        "{ServiceName}-redis": {}
      },
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:9000",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          },
          "AuthEnabled": true
          {if Context.adminOnly}
           , "AuthAdmin": true
          {/if}
        }
      ]
    },
    "{ServiceName}-mysql": {
      "image": "mysql/mysql-server:8.0",
      "container_name": "{ServiceName}-mysql",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto",
        "MYSQL_DATABASE={ServiceName}",
        "MYSQL_USER={ServiceName}",
        "MYSQL_PASSWORD={Passwords.0}"
      ],
      "labels": {
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}",
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://eralumin.github.io/cosmos-servapps/servapps/Mixpost/icon.png"
      },
      "volumes": [
        {
          "type": "volume",
          "source": "{ServiceName}-mysql",
          "target": "/var/lib/mysql"
        }
      ],
      "networks": {
        "{ServiceName}-mysql": {}
      },
      "healthcheck": {
        "test": [
          "CMD",
          "mysqladmin",
          "ping",
          "-p ${DB_PASSWORD}"
        ],
        "retries": 3,
        "timeout": 5
      }
    },
    "{ServiceName}-redis": {
      "image": "redis:alpine",
      "container_name": "{ServiceName}-redis",
      "restart": "unless-stopped",
      "command": "redis-server --appendonly yes --replica-read-only no",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto"
      ],
      "labels": {
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}",
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://eralumin.github.io/cosmos-servapps/servapps/Mixpost/icon.png"
      },
      "volumes": [
        {
          "type": "volume",
          "source": "{ServiceName}-redis",
          "target": "/data"
        }
      ],
      "networks": {
        "{ServiceName}-redis": {}
      },
      "healthcheck": {
        "test": [
          "CMD",
          "redis-cli",
          "ping"
        ],
        "retries": 3,
        "timeout": 5
      }
    }
  },

  "networks": {
    "{ServiceName}-mysql": {},
    "{ServiceName}-redis": {}
  }
}
