
{
  "cosmos-installer": {
    "form": [
      {
        "name": "adminOnly",
        "label": "Do you want to make this service admin only?",
        "initialValue": true,
        "type": "checkbox"
      },
      {
        "name": "device1",
        "label": "Where is the first device to monitor?",
        "initialValue": "",
        "type": "text"
      },
      {
        "name": "device2",
        "label": "Where is the second device to monitor?",
        "initialValue": "",
        "type": "text"
      },
      {
        "name": "device3",
        "label": "Where is the third device to monitor?",
        "initialValue": "",
        "type": "text"
      },
      {
        "name": "device4",
        "label": "Where is the fourth device to monitor?",
        "initialValue": "",
        "type": "text"
      },
      {
        "name": "device5",
        "label": "Where is the fifth device to monitor?",
        "initialValue": "",
        "type": "text"
      }
    ]
  },
  "minVersion": "0.10.3",
  "services": {
    "{ServiceName}": {
      "image": "ghcr.io/analogj/scrutiny:master-web",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "depends_on": {
        "{ServiceName}-influxdb": {
          "condition": "service_healthy"
        }
      },
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto",
        "SCRUTINY_WEB_INFLUXDB_HOST={ServiceName}-influxdb"
      ],
      "labels": {
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}",
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://eralumin.github.io/cosmos/servapps/Scrutiny/icon.png"
      },
      "ports": [
        "8080:8080"
      ],
      "volumes": [
        {
          "type": "volume",
          "source": "{ServiceName}-config",
          "target": "/opt/scrutiny/config'"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:8080",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          },
          "AuthEnabled": true
          {if Context.adminOnly}
           , "AuthAdmin": true
          {/if}
        }
      ],
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:8080/api/health"],
        "interval": "5s",
        "timeout": "10s",
        "retries": "20",
        "start_period": "10s"
      }
    },
    "{ServiceName}-collector": {
      "image": "ghcr.io/analogj/scrutiny:master-collector",
      "container_name": "{ServiceName}-collector",
      "restart": "unless-stopped",
      "depends_on": {
        "{ServiceName}": {
          "condition": "service_healthy"
        }
      },
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto",
        "COLLECTOR_API_ENDPOINT=http://{ServiceName}:8080",
        "COLLECTOR_HOST_ID={ServiceName}-collector"
      ],
      "labels": {
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}",
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://eralumin.github.io/cosmos/servapps/Scrutiny/icon.png"
      },
      "volumes": [
        {
          "type": "bind",
          "source": "/run/udev",
          "target": "/run/udev:ro"
        }
      ],
      "devices": [
        {if Context.device1}
        "{Context.device1}:{Context.device1}"
        {/if}
        {if Context.device2}
        , "{Context.device2}:{Context.device2}"
        {/if}
        {if Context.device3}
        , "{Context.device3}:{Context.device3}"
        {/if}
        {if Context.device4}
        , "{Context.device4}:{Context.device4}"
        {/if}
        {if Context.device5}
        , "{Context.device5}:{Context.device5}"
        {/if}
      ],
      "cap_add": [
        "SYS_RAWIO",
        "SYS_ADMIN"
      ]
    },
    "{ServiceName}-influxdb": {
      "image": "influxdb:latest",
      "container_name": "{ServiceName}-influxdb",
      "restart": "unless-stopped",
      "depends_on": {
        "{ServiceName}": {
          "condition": "service_healthy"
        }
      },
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto"
      ],
      "ports": [
        "8086:8086"
      ],
      "labels": {
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}",
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://eralumin.github.io/cosmos/servapps/Scrutiny/icon.png"
      },
      "volumes": [
        {
          "type": "volume",
          "source": "{ServiceName}-influxdb",
          "target": "/var/lib/influxdb2"
        }
      ],
      "healthcheck": {
        "test": ["CMD", "curl", "-f", "http://localhost:8086/health"],
        "interval": "5s",
        "timeout": "10s",
        "retries": "20"
      }
    }
  }
}
