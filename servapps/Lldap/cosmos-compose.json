{
  "cosmos-installer": {
    "form": [
      {
        "name": "domainLabel",
        "label": "What is the Label of your domain? (for ex 'google' is the label of 'google.com')",
        "initialValue": "example",
        "type": "text"
      },
      {
        "name": "domainTLD",
        "label": "What is the TLD of your domain? (for ex 'com' is the TLD of 'google.com')",
        "initialValue": "com",
        "type": "text"
      },
      {
        "name": "adminOnly",
        "label": "Do you want to make this service admin only?",
        "initialValue": false,
        "type": "checkbox"
      }
    ]
  },
  "minVersion": "0.9.0",
  "services": {
    "{ServiceName}": {
      "image": "lldap/lldap:stable",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "UID": 1000,
      "GID": 1000,
      "environment": [
        "PUID=1000",
        "PGID=1000",
        "TZ=auto",
        "LLDAP_JWT_SECRET={Passwords.1}",
        "LLDAP_KEY_SEED={Passwords.2}",
        "LLDAP_LDAP_BASE_DN=dc={Context.domainLabel},dc={Context.domainTld}",
        "LLDAP_LDAP_USER_PASS={Passwords.0}"
      ],
      "labels": {
        "cosmos-persistent-env": "LLDAP_JWT_SECRET, LLDAP_KEY_SEED, LLDAP_LDAP_USER_PASS, LLDAP_LDAP_BASE_DN",
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "true",
        "cosmos-icon": "https://azukaar.github.io/cosmos-servapps-official/Lldap/icon.png",
        "cosmos-stack": "{ServiceName}",
        "cosmos-stack-main": "{ServiceName}"
      },
      "volumes": [
        {
          "source": "{ServiceName}-data",
          "target": "/data",
          "type": "volume"
        }
      ],
      "ports": [
        "17170:17170"
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:17170",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "SmartShield": {
            "Enabled": true
          },
          {if Context.adminOnly}
            , "AuthEnabled": true,
            "AuthAdmin": true
          {/if}
        }
      ]
    }
  }
}